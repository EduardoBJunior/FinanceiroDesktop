
@{

    Layout = "~/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("Gravar", "Movimento", FormMethod.Post))
{
<div class="form-group">
    <label>Data Moviemnto</label>
    <input type="date" class="form-control" name="data">
</div>
<div class="form-group">
    <label>Tipo</label>
    <select class="form-control" name="tipo">
        <option value="">Selecione</option>
        <option value="0">Entrada</option>
        <option value="1">Saída</option>
    </select>
</div>
<div class="form-group">
    <label>Valor</label>
    <input class="form-control" placeholder="Digite aqui!" name="valor">
</div>

<div class="form-group">
    <label>Categoria</label>
    <select class="form-control" name="cat">
        <option value="">Selecione</option>
        @foreach (var item in ViewBag.LstCategoria)
        {
            <option value="@item.id_categoria">@item.nome_categoria</option>
        }

    </select>
</div>
<div class="form-group">
    <label>Empresa</label>
    <select class="form-control" name="emp">
        <option value="">Selecione</option>
        @foreach (var item in ViewBag.lstEmpresa)
        {
            <option value="@item.id_empresa">@item.nome_empresa</option>
        }

    </select>
</div>
<div class="form-group">
    <label>Conta</label>
    <select class="form-control" name="conta">
        <option value="">Selecione</option>
        @foreach (var item in ViewBag.lstConta)
        {
            <option value="@item.id_conta">@item.nome_banco / @item.numero_conta / R$ @item.saldo_conta</option>
        }

    </select>
</div>

<div class="form-group">
    <label>Observação</label>
    <input class="form-control" placeholder="Digite o aqui!" name="obs">
</div>


<button type="submit" class="btn btn-success">Cadastrar</button>
}

