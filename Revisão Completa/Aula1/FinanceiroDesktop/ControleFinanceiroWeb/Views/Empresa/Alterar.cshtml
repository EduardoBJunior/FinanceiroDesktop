
@{


    Layout = "~/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm("Gravar", "Empresa", FormMethod.Post))
{
    <input type="hidden" name="cod" value="@ViewBag.cod" />
    <div class="form-group">
        <label>Nome da Empresa</label>
        <input class="form-control" placeholder="Digite aqui!" name="nome" value="@ViewBag.nome">
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input class="form-control" placeholder="Digite aqui!" name="tel" value="@ViewBag.tel">
    </div>
    <div class="form-group">
        <label>Edereço</label>
        <input class="form-control" placeholder="Digite aqui!" name="end" value="@ViewBag.end">
    </div>
    <div class="form-group">
        <label>Site</label>
        <input class="form-control" placeholder="Digite o aqui!" name="sit" value="@ViewBag.sit">
    </div>

    <button type="submit" name= "btn" value="salvar" class="btn btn-success">Salvar</button>
    <button type="submit" name= "btn" value="excluir" class="btn btn-danger">Excluir</button>
}




